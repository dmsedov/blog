extends ../layouts/app.pug

block content
  -const par = error ? error : form;
  form.form-sign-up(method='post' action=`${url('session')}`)
    if (par.message)
      p.message=error.message
    input.nickname-field(type='text' name='nickname' placeholder='enter nickname' value=par.nickname)
    if (par.password)
      input.password-field(type='text' name='password' placeholder='enter password' value=par.password)
    else
      input.password-field(type='password' name='password' placeholder='enter password')
    button.submit(type='submit') Sign up
